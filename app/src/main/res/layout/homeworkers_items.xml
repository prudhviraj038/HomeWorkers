<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/detail_rect_corners"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/detail_rect_corners">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/st_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Applicant ID"
                                android:textColor="@color/registerdeselect"
                                android:textStyle="normal" />

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/hw_id"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="3dp"
                                android:text="001"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:paddingLeft="2dp"
                            android:paddingRight="5dp">

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/st_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:textColor="@color/registerdeselect"
                                android:textStyle="normal" />

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/hw_age"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="3dp"
                                android:text="29"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/st_nationality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nationality"
                                android:textColor="@color/registerdeselect"
                                android:textStyle="normal" />

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/hw_nationality"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="3dp"
                                android:text="Phillipines"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/st_religion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Religion"
                                android:textColor="@color/registerdeselect"
                                android:textStyle="normal" />

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/hw_religion"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="3dp"
                                android:text="Muslim"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/st_salary"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Salary"
                                android:textColor="@color/registerdeselect"
                                android:textStyle="normal" />

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/sal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="220 KD"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/st_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:textColor="@color/registerdeselect"
                                android:textStyle="normal" />

                            <com.example.yellowsoft.homeworkers.TextViewRegular
                                android:id="@+id/amt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="2200 KD"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>